<h1>manage users</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if !@users.blank? %>
      <% for user in @users %>
        <tr>
          <td><%= link_to "#{user.name}", profile_path(user.id) %></td>
          <td><%= user.email %></td>
          <td><%= link_to "edit", edit_user_path(user), class: "btn btn-default" %> </td>
          <td><%= glink_to "enrollments", "map-marker", user_enrollments_path(user),class: "btn btn-default"  %> </td>
          <td><%= link_to "einloggen als", become_user_path(user),class: "btn btn-default"  %> </td>
        </tr>
      <% end %>
    <% else %>
    <% end %>
  </tbody>
</table>