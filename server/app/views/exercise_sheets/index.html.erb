<h1>Listing Exercise Sheets</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>User</th>
      <th>Order</th>
      <th>File</th>
      <th>Publish</th>
      <th>Duedate</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_exercise_sheets.each do |exercise_sheet| %>
      <tr>
        <td><%= exercise_sheet.course %></td>
        <td><%= exercise_sheet.user %></td>
        <td><%= exercise_sheet.order %></td>
        <td><%= exercise_sheet.file %></td>
        <td><%= exercise_sheet.publish %></td>
        <td><%= exercise_sheet.duedate %></td>
        <td><%= exercise_sheet.description %></td>
        <td><%= link_to 'Show', exercise_sheet %></td>
        <td><%= link_to 'Edit', edit_exercise_sheet_path(exercise_sheet) %></td>
        <td><%= link_to 'Destroy', exercise_sheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

