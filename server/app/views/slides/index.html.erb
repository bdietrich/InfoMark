<p id="notice"><%= notice %></p>

<h1>Listing Slides</h1>

<table>
  <thead>
    <tr>
      <th>File</th>
      <th>Course</th>
      <th>Publish</th>
      <th>Public</th>
      <th>Lecture</th>
      <th>Info</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slides.each do |slide| %>
      <tr>
        <td><%= slide.file %></td>
        <td><%= slide.course %></td>
        <td><%= slide.publish %></td>
        <td><%= slide.public %></td>
        <td><%= slide.lecture %></td>
        <td><%= slide.info %></td>
        <td><%= slide.title %></td>
        <td><%= link_to 'Show', slide %></td>
        <td><%= link_to 'Edit', edit_slide_path(slide) %></td>
        <td><%= link_to 'Destroy', slide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

